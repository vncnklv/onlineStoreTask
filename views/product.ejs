<%- include header.ejs %>

<div class="bodyContainer">
    <img
        src="/images/<%= product.image_groups[0].images[0].link %>"
        alt="<%= product.image_groups[0].images[0].src %>"
    />

    <h1><%= product.name %></h1>
    <div>
        <% if(product.short_description != product.long_description) {%> <%=
        product.short_description%> <%}%>
    </div>
    <div><%- product.long_description %></div>

    <a href="#">Buy Now</a>

    <div class="price">
        <label for="currency">Price:</label>
        <span id="price"><%= product.price %></span>
        <select id="currency" name="currency">
            <option value="volvo">USD</option>
            <option value="saab">USD</option>
            <option value="fiat">USD</option>
        </select>
    </div>
</div>

<%- include footer.ejs %>
